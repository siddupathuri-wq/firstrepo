    <label>Your Name:</label>
    <input type="text" required>

    <label>Your Email:</label>
    <input type="email" required>

    <label>Item Name:</label>
    <input type="text" required>

    <label>Description:</label>
    <textarea required></textarea>

    <label>Upload Photo:</label>
    <input type="file">

