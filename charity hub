<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('search');
        const cardGrid = document.querySelector('.card-grid');
        const charityCards = cardGrid.querySelectorAll('.charity-card');

        searchInput.addEventListener('input', function() {
            const searchTerm = searchInput.value.toLowerCase();

            charityCards.forEach(function(card) {
                const title = card.querySelector('.card-title').textContent.toLowerCase();
                const desc = card.querySelector('.card-desc').textContent.toLowerCase();
                const tags = card.querySelector('.card-tags').textContent.toLowerCase();

                if (title.includes(searchTerm) || desc.includes(searchTerm) || tags.includes(searchTerm)) {
                    card.style.display = 'flex'; // Show the card
                } else {
                    card.style.display = 'none'; // Hide the card
                }
            });
        });
    });
</script>
</body>
</html>
